{
  "name": "github-copilot-task-master",
  "displayName": "GitHub Copilot Task Master",
  "description": "AI-powered project management extension for VS Code with GitHub integration",
  "version": "0.0.1",
  "publisher": "databridge360",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": ["Other", "Programming Languages", "Snippets"],
  "keywords": ["github", "copilot", "task", "project", "ai", "management"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "taskMaster.showWizard",
        "title": "Task Master: New Project Wizard"
      },
      {
        "command": "taskMaster.showDashboard",
        "title": "Task Master: Show Dashboard"
      },
      {
        "command": "taskMaster.syncGitHub",
        "title": "Task Master: Sync with GitHub"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "task-master",
          "title": "Task Master",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "task-master": [
        {
          "id": "taskMaster.taskView",
          "name": "Tasks",
          "icon": "media/icon.svg"
        },
        {
          "id": "taskMaster.progressView",
          "name": "Progress"
        }
      ]
    },
    "configuration": {
      "title": "GitHub Copilot Task Master",
      "properties": {
        "taskMaster.github.token": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for API access"
        },
        "taskMaster.ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for AI assistance"
        },
        "taskMaster.ai.model": {
          "type": "string",
          "default": "gpt-4",
          "enum": ["gpt-4", "gpt-3.5-turbo"],
          "description": "AI model to use for assistance"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "openai": "^4.20.0",
    "axios": "^1.6.2"
  }
}